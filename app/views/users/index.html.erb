<% provide(:title, 'All Users') %>

<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-default">
    	<div class="panel-body">
    		<h1>All Users:</h1>
		  	<ul class="users">
				  <% @users.each do |user| %>
				    <li>
				      	<%= link_to user.name, user %>
				      	<%= user.email %>
				    </li>
				  <% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
