<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "curesource", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right navbar-nav">
          <li><%= link_to departments_path do %>
              <span class="glyphicon glyphicon-book"></span> Departments
            <% end %>
          </li>

          <% if signed_in? %>
            <li><%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-bookmark"></span> Dashboard
              <% end %>
            </li>

          <% if current_user.role == "admin" %>
            <li><%= link_to users_path do %>
              <span class="glyphicon glyphicon-list-alt"></span> Users
              <% end %>
            </li>
          <% end %>

          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <span class="glyphicon glyphicon-user"></span> Account <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
              <li><%= link_to edit_user_registration_path do %>
                <span class="glyphicon glyphicon-cog"></span> Settings
              <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: "delete" do %>
                <span class="glyphicon glyphicon-log-out"></span> Sign out
              <% end %>
              </li>
            </ul>
          </li>

          <% else %>
          
            <li><%= link_to "Login", new_user_session_path %></li>
            <li><%= link_to "Sign up!", new_user_registration_path, method: 'get' %>

          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
