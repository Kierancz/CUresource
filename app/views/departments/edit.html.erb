<% if current_user.role == "admin" %>
<%= render "posts/wysihtml5" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1><b>Editing: </b><%= @department.title %></h1>
            <hr><br>
     			  <%= simple_form_for(@department) do |f| %>
              <%= f.label "Subject" %><i> (e.g. CSCI)</i>
              <%= f.text_field :name, class: "form-control" %>
          		<%= f.label :title %>
          		<%= f.text_field :title, class: "form-control" %>

          		<%= f.label :description %><i> (Optional)</i>
          		<%= f.text_area :description, :rows => 3, class: "form-control" %>

              <%= f.label "Banner Url" %><i> (Optional)</i>
              <%= f.url_field :banner, class: "form-control" %>

              <%= f.label :info %>
              <%= f.text_area :info, rows: 5, placeholder: "Enter Department info", class: "wysihtml5" %>

          		<span class="pull-left"><%= f.submit "Save Changes", class: "btn btn-large btn-primary" %></span>
          		<% end %>
              
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Delete the <%= @department.title %> department:</h3>
      		<span class="pull-left"><%= button_to('Delete Department', { :action => "destroy", :id => @department.id },
          method: "delete", data: { confirm: 'Are you sure?', disable_with: 'loading...' }, class: "btn btn-large btn-danger") %></span>
        </div>
      </div>
		</div>
	</div>
</div>


<% else %>
<center><h1>You do not have permission to access this page</h1>
<% end %>



